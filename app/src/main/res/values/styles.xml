<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyStyle">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">#fff</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">#CCffffff</item>
        <!-- Icon Color -->
        <item name="android:tint">#fff</item>
    </style>


    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textColorHint">@color/main3</item>
        <item name="colorControlNormal">#808080</item>
        <item name="colorControlActivated">@color/main3</item>
        <item name="colorControlHighlight">@color/blue1</item>
    </style>


    <style name="aditionalinfo" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textColorHint">#008fb3</item>
        <item name="colorControlNormal">#008fb3</item>
        <item name="colorControlActivated">@color/main3</item>
        <item name="colorControlHighlight">@color/blue1</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/main3</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#8c8c8c
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/black
        </item>
    </style>




    <style name="ti" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textColorHint">@color/main3</item>
        <item name="colorControlNormal">#666666</item>
        <item name="colorControlActivated">@color/main3</item>
        <item name="colorControlHighlight">@color/blue1</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>